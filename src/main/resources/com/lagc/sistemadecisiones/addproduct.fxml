<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER_LEFT" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lagc.sistemadecisiones.AddProductController">
    <HBox spacing="50.0">
        <VBox>
            <Label text="Tipo de producto"></Label>
            <ListView fx:id="listViewTipoProducto"></ListView>
        </VBox>
        <VBox alignment="TOP_RIGHT" spacing="40.0">
            <HBox spacing="15.0" alignment="TOP_RIGHT">
                <Label text="Nombre del producto:"></Label>
                <TextField fx:id="textNombreProducto"></TextField>
            </HBox>
            <HBox spacing="15.0" alignment="TOP_RIGHT">
                <Label text="Precio:"></Label>
                <Spinner fx:id="spinnerPrecio" editable="true"></Spinner>
            </HBox>
            <HBox spacing="15.0" alignment="TOP_RIGHT">
                <Label text="Tienda:"></Label>
                <TextField fx:id="textTienda"></TextField>
            </HBox>
            <Button minWidth="162.0"
                    prefWidth="162.0"
                    minHeight="60.0"
                    prefHeight="60.0"
                    onAction="#agregarActionHandler"
                    text="Agregar producto"></Button>
        </VBox>
    </HBox>
</VBox>
